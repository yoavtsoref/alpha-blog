<%= form_with(model: article, local: true, :html => {class: "form-horizontal", role: "form"}) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class='row'>
    <div class='col-xs-12'>
      <div class="form-group">
        <div class="control-label col-sm-2">
        <%= form.label :title %>
      </div>
      <div class="col-sm-8">
        <%= form.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
      </div>
      </div>

     <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :description %>
        </div>
        <div class="col-sm-8">
          <%= form.text_area :description, rows: 10,class: "form-control", placeholder: "Desctiption of article" %>
        </div>
      </div>
    </div>


      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-12">
        <%= form.submit class: 'btn btn-primary btn-lg' %>
      </div>
    </div>

      </div>
    </div>
  </div>

<% end %>
  <div class="col-xs-4 col-xs-offset-4">
    [ <%= link_to 'Cancel request and return to articles listing', articles_path %> ]
</div>
