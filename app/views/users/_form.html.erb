<%= form_with(model: @user, local: true, :html => {class: "form-horizontal", role: "form"}) do |form| %>
  <%= render 'shared/errors', obj: @user %>

  <div class='row'>
    <div class='col-xs-12'>
      <div class="form-group">
        <div class="control-label col-sm-2">
        <%= form.label :username %>
      </div>
      <div class="col-sm-8">
        <%= form.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
      </div>
      </div>

     <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :email %>
        </div>
        <div class="col-sm-8">
          <%= form.email_field :email, class: "form-control", placeholder: "Enter email" %>
        </div>
      </div>
      <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :password %>
          </div>
          <div class="col-sm-8">
            <%= form.password_field :password,class: "form-control", placeholder: "Enter Password" %>
          </div>
        </div>
      </div>
    </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-12">
        <%= form.submit(@user.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary btn-lg') %>
      </div>
    </div>

      </div>
    </div>
  </div>

<% end %>
  <div class="col-xs-4 col-xs-offset-4">
    [ <%= link_to 'Cancel request and return to articles listing', articles_path %> ]
</div>